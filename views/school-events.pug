extends layout

block content
  style.
    body {
      direction: rtl;
      font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
      line-height: 1.6;
      color: #e2e8f0;
      background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
      overflow-x: hidden;
    }

    /* Hero Section - Education Theme */
    .hero {
      background: linear-gradient(135deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.5)), url('/WhatsApp Image 2025-08-11 at 14.28.36 (2).jpeg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      color: white;
      padding: 120px 0 80px;
      text-align: center;
      position: relative;
      overflow: hidden;
      min-height: 60vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.4) 100%);
      opacity: 1;
    }



    .hero-content {
      position: relative;
      z-index: 2;
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
      padding: 0 24px;
    }

    .hero-title {
      font-size: clamp(2.5rem, 6vw, 3.5rem);
      font-weight: 700;
      margin-bottom: 24px;
      text-shadow: 0 2px 8px rgba(0,0,0,0.3);
      animation: fadeInDown 1s ease-out;
      line-height: 1.2;
      letter-spacing: -0.02em;
      background: linear-gradient(45deg, #8b5cf6, #6366f1, #a855f7);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero-subtitle {
      font-size: clamp(1.1rem, 3.5vw, 1.4rem);
      margin-bottom: 28px;
      opacity: 0.9;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
      animation: fadeInUp 1s ease-out 0.3s both;
      line-height: 1.5;
      font-weight: 500;
    }

    /* Content Sections - Education Theme */
    .content-section {
      padding: 80px 0;
      background: #1a202c;
      position: relative;
    }

    .content-section:nth-child(even) {
      background: #2d3748;
    }

    .content-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #8b5cf6, #6366f1, #a855f7, #8b5cf6);
      background-size: 200% 100%;
      animation: gradientShift 3s ease-in-out infinite;
    }

    @keyframes gradientShift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    /* Hero Animations */
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 24px;
    }

    .content-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: start;
    }

    .content-text {
      background: rgba(255, 255, 255, 0.02);
      border-radius: 20px;
      padding: 40px;
      border: 1px solid rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      position: relative;
      overflow: hidden;
    }

    .content-text::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #8b5cf6, #6366f1);
    }

    .content-text h3 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 20px;
      color: #a855f7;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .content-text h3 svg {
      width: 28px;
      height: 28px;
      color: #8b5cf6;
    }

    .content-text p {
      margin-bottom: 20px;
      line-height: 1.7;
      color: #e2e8f0;
    }

    .content-text ul, .content-text ol {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .content-text li {
      margin-bottom: 15px;
      padding-right: 60px;
      color: #e2e8f0;
      position: relative;
      line-height: 1.6;
    }

    .content-text li::before {
      content: '◆';
      position: absolute;
      right: 30px;
      top: 50%;
      transform: translateY(-50%);
      color: #8b5cf6;
      font-size: 16px;
      font-weight: bold;
      text-shadow: 0 2px 4px rgba(139, 92, 246, 0.3);
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      animation: pulse 2s infinite;
    }

    .content-text li:hover::before {
      transform: translateY(-50%) rotate(45deg) scale(1.3);
      color: #7c3aed;
      text-shadow: 0 4px 8px rgba(139, 92, 246, 0.5);
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }

    .content-text ol li::before {
      content: counter(ol-counter);
      counter-increment: ol-counter;
      color: #a855f7;
      font-weight: 600;
      margin-left: 25px;
      position: absolute;
      right: 0;
      top: 0;
      line-height: 1;
      background: linear-gradient(135deg, #a855f7, #8b5cf6);
      color: white;
      width: 28px;
      height: 28px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      box-shadow: 0 4px 12px rgba(168, 85, 247, 0.3);
      transition: all 0.3s ease;
    }

    .content-text ol li:hover::before {
      transform: scale(1.1);
      box-shadow: 0 6px 16px rgba(168, 85, 247, 0.4);
    }

    .content-text ol li {
      background: rgba(168, 85, 247, 0.05);
      border: 1px solid rgba(168, 85, 247, 0.1);
      border-radius: 12px;
      padding: 20px 25px 20px 20px;
      margin-bottom: 15px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .content-text ol li:hover {
      background: rgba(168, 85, 247, 0.08);
      border-color: rgba(168, 85, 247, 0.2);
      transform: translateX(-5px);
      box-shadow: 0 8px 25px rgba(168, 85, 247, 0.15);
    }

    .content-text ol li::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 4px;
      height: 100%;
      background: linear-gradient(135deg, #a855f7, #8b5cf6);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .content-text ol li:hover::after {
      opacity: 1;
    }

    .content-text ol {
      counter-reset: ol-counter;
    }

    .highlight-box {
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(99, 102, 241, 0.1));
      border: 1px solid rgba(139, 92, 246, 0.2);
      border-radius: 20px;
      padding: 40px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .highlight-box::before {
      content: '';
      position: absolute;
      top: 20px;
      right: 20px;
      width: 32px;
      height: 32px;
      background: #8b5cf6;
      border-radius: 50%;
      opacity: 0.3;
    }

    .highlight-box h3 {
      color: #a855f7;
      margin-bottom: 20px;
      font-size: 1.8rem;
    }

    .highlight-box p {
      font-size: 1.1rem;
      color: #e2e8f0;
      margin: 0;
    }

    /* Section Titles - Education Theme */
    .section-title {
      font-size: 2.5rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 60px;
      color: #a855f7;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 20px;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: -15px;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 4px;
      background: linear-gradient(90deg, #8b5cf6, #6366f1, #a855f7);
      border-radius: 2px;
    }

    .section-title svg {
      width: 32px;
      height: 32px;
      color: #8b5cf6;
    }

    /* CTA Section - Education Theme */
    .cta-section {
      text-align: center;
      padding: 100px 60px;
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.05), rgba(99, 102, 241, 0.05));
      border-radius: 30px;
      position: relative;
      overflow: hidden;
    }



    .cta-description {
      font-size: 1.2rem;
      margin-bottom: 40px;
      color: #e2e8f0;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .cta-button-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 16px 32px;
      text-decoration: none;
      border-radius: 50px;
      font-weight: 600;
      font-size: 1.1rem;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .btn-primary {
      background: linear-gradient(135deg, #8b5cf6, #a855f7);
      color: #1a202c;
      box-shadow: 0 8px 25px rgba(139, 92, 246, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(139, 92, 246, 0.4);
    }

    .btn-secondary {
      background: linear-gradient(135deg, #6366f1, #8b5cf6);
      color: #1a202c;
      box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
    }

    .btn-secondary:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(99, 102, 241, 0.4);
    }

    .btn svg {
      width: 24px;
      height: 24px;
    }



    /* Responsive Design */
    @media (max-width: 1024px) {
      .content-grid {
        gap: 40px;
      }
      
      .cta-section {
        padding: 80px 40px;
      }
    }

    @media (max-width: 768px) {
      .content-grid {
        grid-template-columns: 1fr;
        gap: 30px;
      }
      
      .content-text {
        padding: 30px;
      }
      

      
      .cta-section {
        padding: 60px 30px;
      }
      
      .cta-button-container {
        flex-direction: column;
        align-items: center;
      }
      
      .btn {
        width: 100%;
        max-width: 300px;
        justify-content: center;
      }
    }

    @media (max-width: 480px) {
      .hero {
        padding: 80px 0 60px;
      }
      
      .content-section {
        padding: 60px 0;
      }
      
      .content-text {
        padding: 25px;
      }
      
      .cta-section {
        padding: 50px 20px;
      }
      
      .section-title {
        font-size: 2rem;
        margin-bottom: 40px;
      }
    }





