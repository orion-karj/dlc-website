        height: 36px;
        margin-left: 8px;
      }

      .content-text {
        padding: 24px 20px;
        border-radius: 12px;
      }

      .content-text h3 {
        font-size: 1.4rem;
        margin-bottom: 12px;
      }

      .content-text h3 svg {
        width: 24px;
        height: 24px;
      }

      .content-text p {
        font-size: 0.95rem;
        line-height: 1.5;
      }

      .content-text li {
        padding: 8px 0;
        padding-right: 20px;
        font-size: 0.9rem;
      }

      .contact-section {
        padding: 30px 16px;
        margin-top: 30px;
      }

      .contact-grid {
        gap: 20px;
      }

      .contact-item {
        padding: 20px 16px;
      }

      .contact-item svg {
        width: 36px;
        height: 36px;
      }

      .contact-item h4 {
        font-size: 1.1rem;
      }

      .contact-item p {
        font-size: 0.9rem;
      }

      .cta-title {
        font-size: 1.6rem;
      }

      .cta-description {
        font-size: 0.95rem;
        padding: 0 12px;
      }

      .btn {
        padding: 12px 24px;
        font-size: 0.95rem;
        width: 100%;
        justify-content: center;
      }
    }

    @media (max-width: 360px) {
      .hero-title {
        font-size: 1.8rem;
      }

      .hero-subtitle {
        font-size: 1rem;
      }

      .section-title {
        font-size: 1.6rem;
      }

      .content-text {
        padding: 20px 16px;
      }

      .content-text h3 {
        font-size: 1.3rem;
      }

      .btn {
        padding: 10px 20px;
        font-size: 0.9rem;
      }
    }

    /* Landscape orientation adjustments for mobile */
    @media (max-height: 500px) and (orientation: landscape) {
      .hero {
        min-height: 40vh;
        padding: 20px 0;
      }

      .hero-title {
        font-size: 2rem;
        margin-bottom: 12px;
      }

      .hero-subtitle {
        font-size: 1.1rem;
        margin-bottom: 16px;
      }

      .section {
        padding: 40px 0;
      }
    }

    /* High DPI displays */
    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
      .hero-title {
        text-shadow: 0 1px 4px rgba(0,0,0,0.4);
      }
    }

    /* Print styles */
    @media print {
      .hero {
        min-height: auto;
        padding: 20px 0;
      }

      .content-text {
        break-inside: avoid;
        border: 1px solid #ccc;
      }

      .contact-section {
        break-before: page;
      }
    }

    /* Accessibility improvements */
    @media (prefers-reduced-motion: reduce) {
      .fade-in,
      .fade-in-left,
      .fade-in-right,
      .scale-in {
        transition: none;
        opacity: 1;
        transform: none;
      }
      
      .btn:hover {
        transform: none;
      }
      
      .contact-item:hover {
        transform: none;
      }
    }

    /* Dark mode support */
    @media (prefers-color-scheme: dark) {
      .content-text {
        background: rgba(30, 64, 175, 0.08);
        border-color: rgba(30, 64, 175, 0.15);
      }
      
      .contact-item {
        background: rgba(30, 64, 175, 0.08);
        border-color: rgba(30, 64, 175, 0.15);
      }
    }

    /* Focus styles for accessibility */
    .btn:focus,
    .contact-item:focus {
      outline: 2px solid #3b82f6;
      outline-offset: 2px;
    }

    /* Smooth scrolling for older browsers */
    @supports not (scroll-behavior: smooth) {
      html {
        scroll-behavior: auto;
      }
    }

    /* Animations */
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

  script.
    // Scroll fade-in functionality
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);

    // Observe all fade-in elements
    document.addEventListener('DOMContentLoaded', () => {
      const fadeElements = document.querySelectorAll('.fade-in, .fade-in-left, .fade-in-right, .scale-in');
      fadeElements.forEach(el => {
        observer.observe(el);
      });
    });

