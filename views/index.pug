extends layout.pug 

block content
  script(src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js")
  style.
    /* Reset and Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
      font-size: 16px;
    }

    body {
      font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
      line-height: 1.6;
      color: #e2e8f0;
      direction: rtl;
      text-align: right;
      overflow-x: hidden;
      background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
      font-weight: 400;
      position: relative;
    }

    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        linear-gradient(90deg, transparent 98%, rgba(0, 112, 243, 0.05) 100%),
        linear-gradient(0deg, transparent 98%, rgba(0, 112, 243, 0.05) 100%);
      background-size: 40px 40px;
      pointer-events: none;
      z-index: -1;
    }

    /* Scroll fade effects */
    .fade-in {
      opacity: 0;
      transform: translateY(30px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .fade-in-left {
      opacity: 0;
      transform: translateX(50px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .fade-in-left.visible {
      opacity: 1;
      transform: translateX(0);
    }

    .fade-in-right {
      opacity: 0;
      transform: translateX(-50px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .fade-in-right.visible {
      opacity: 1;
      transform: translateX(0);
    }

    .scale-in {
      opacity: 0;
      transform: scale(0.8);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .scale-in.visible {
      opacity: 1;
      transform: scale(1);
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 24px;
    }

    /* Navigation Styles */
    nav.navbar {
      background: rgba(26, 32, 44, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(0, 112, 243, 0.2);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      transition: all 0.3s ease;
    }

    nav.navbar.scrolled {
      background: rgba(26, 32, 44, 0.98);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .navbar-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 70px;
    }

    .navbar-brand {
      font-size: 1.5rem;
      font-weight: 700;
      color: #f7fafc;
      text-decoration: none;
      background: linear-gradient(135deg, #f7fafc 0%, #0070f3 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .navbar-brand:hover {
      background: linear-gradient(135deg, #0070f3 0%, #38a169 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .navbar-nav {
      display: flex;
      list-style: none;
      gap: 32px;
      align-items: center;
    }

    .nav-item {
      position: relative;
    }

    .nav-link {
      color: #cbd5e0;
      text-decoration: none;
      font-weight: 500;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      padding: 8px 16px;
      border-radius: 8px;
      position: relative;
    }

    .nav-link:hover {
      color: #f7fafc;
      background: rgba(0, 112, 243, 0.1);
    }

    .nav-link.active {
      color: #0070f3;
      background: rgba(0, 112, 243, 0.15);
    }

    .nav-link::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 0;
      height: 2px;
      background: #0070f3;
      transition: width 0.3s ease;
    }

    .nav-link:hover::after,
    .nav-link.active::after {
      width: 80%;
    }

    .navbar-toggle {
      display: none;
      background: none;
      border: none;
      color: #f7fafc;
      font-size: 1.5rem;
      cursor: pointer;
      padding: 8px;
    }

    .navbar-toggle:hover {
      color: #0070f3;
    }

    /* Mobile Navigation */
    @media (max-width: 768px) {
      .navbar-nav {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: rgba(26, 32, 44, 0.98);
        backdrop-filter: blur(10px);
        flex-direction: column;
        gap: 0;
        border-top: 1px solid rgba(0, 112, 243, 0.2);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      }

      .navbar-nav.active {
        display: flex;
      }

      .nav-item {
        width: 100%;
        border-bottom: 1px solid rgba(0, 112, 243, 0.1);
      }

      .nav-link {
        display: block;
        padding: 16px 24px;
        border-radius: 0;
        text-align: center;
      }

      .navbar-toggle {
        display: block;
      }
    }

    /* Hero Section */
    .hero {
      background: linear-gradient(135deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.5)), url('/WhatsApp Image 2025-08-11 at 14.28.36 (2).jpeg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      color: white;
      padding: 120px 0 80px;
      text-align: center;
      position: relative;
      overflow: hidden;
      min-height: 80vh;
      display: flex;
      align-items: center;
    }

    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.4) 100%);
      opacity: 1;
    }

    .hero::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(circle at 20% 80%, rgba(0, 112, 243, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(56, 161, 105, 0.08) 0%, transparent 50%);
      pointer-events: none;
    }

    .hero-content {
      position: relative;
      z-index: 2;
      max-width: 900px;
      margin: 0 auto;
    }

    .hero-title {
      font-size: clamp(2.5rem, 6vw, 3.5rem);
      font-weight: 700;
      margin-bottom: 24px;
      text-shadow: 0 2px 8px rgba(0,0,0,0.3);
      animation: fadeInDown 1s ease-out;
      line-height: 1.2;
      letter-spacing: -0.02em;
    }

    .hero-subtitle {
      font-size: clamp(1.1rem, 3.5vw, 1.4rem);
      margin-bottom: 28px;
      opacity: 0.9;
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
      animation: fadeInUp 1s ease-out 0.3s both;
      line-height: 1.5;
      font-weight: 500;
    }

    .hero-description {
      font-size: clamp(0.95rem, 2.5vw, 1.1rem);
      margin-bottom: 40px;
      opacity: 0.85;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
      animation: fadeInUp 1s ease-out 0.6s both;
      line-height: 1.6;
      font-weight: 400;
    }

    .hero-cta {
      animation: fadeInUp 1s ease-out 0.9s both;
      display: flex;
      gap: 18px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .btn {
      display: inline-block;
      padding: 14px 28px;
      background: #1a202c;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      border: 1px solid transparent;
      position: relative;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.15);
      letter-spacing: 0.01em;
      min-width: 140px;
      text-align: center;
    }

    .btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.08), transparent);
      transition: left 0.4s;
    }

    .btn:hover::before {
      left: 100%;
    }

    .btn:hover {
      background: #2d3748;
      transform: translateY(-1px);
      box-shadow: 0 4px 16px rgba(0,0,0,0.25);
    }

    .btn-outline {
      background: transparent;
      border-color: white;
      color: white;
      box-shadow: 0 4px 15px rgba(255,255,255,0.1);
    }

    .btn-outline:hover {
      background: white;
      color: #2d3748;
      box-shadow: 0 8px 25px rgba(255,255,255,0.2);
    }

    /* Animations */
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Section Styles */
    section {
      padding: 100px 0;
    }

    .section-title {
      font-size: clamp(2rem, 6vw, 2.8rem);
      text-align: center;
      margin-bottom: 80px;
      color: #f7fafc;
      font-weight: 700;
      position: relative;
      line-height: 1.2;
      letter-spacing: -0.01em;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: -20px;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 3px;
      background: #0070f3;
      border-radius: 2px;
    }

    /* About Section */
    .about {
      background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
      position: relative;
      overflow: hidden;
    }

    .about::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 60px;
      background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0 80%);
    }

    .about::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 400px;
      height: 400px;
      background: 
        linear-gradient(135deg, rgba(0, 112, 243, 0.02) 0%, transparent 70%);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      z-index: 0;
      pointer-events: none;
    }

    .about-background {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(circle at 10% 20%, rgba(0, 112, 243, 0.03) 0%, transparent 40%),
        radial-gradient(circle at 90% 80%, rgba(56, 161, 105, 0.03) 0%, transparent 40%),
        linear-gradient(45deg, transparent 49%, rgba(0, 112, 243, 0.01) 50%, transparent 51%);
      background-size: 100px 100px, 120px 120px, 60px 60px;
      opacity: 0.6;
      z-index: 0;
    }

    .about-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 80px;
      align-items: center;
      margin-top: 60px;
      position: relative;
      z-index: 1;
    }

    .about-text {
      position: relative;
      z-index: 1;
    }

    .about-image {
      position: relative;
      z-index: 1;
    }

    .about-text {
      position: relative;
    }

    .about-text::before {
      content: '';
      position: absolute;
      top: -15px;
      right: -15px;
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, rgba(0, 112, 243, 0.06), rgba(56, 161, 105, 0.06));
      border-radius: 50%;
      z-index: -1;
    }

    .about-text h2 {
      font-size: clamp(1.8rem, 5vw, 2.4rem);
      margin-bottom: 28px;
      color: #f7fafc;
      font-weight: 600;
      line-height: 1.3;
      position: relative;
      background: linear-gradient(135deg, #f7fafc 0%, #e2e8f0 50%, #0070f3 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .about-text h2::after {
      content: '';
      position: absolute;
      bottom: -10px;
      
      width: 80px;
      height: 3px;
      background: linear-gradient(90deg, #0070f3, #38a169);
      border-radius: 2px;
      box-shadow: 0 2px 8px rgba(0, 112, 243, 0.2);
    }

    .about-text p {
      font-size: clamp(1rem, 3vw, 1.15rem);
      margin-bottom: 24px;
      color: #e2e8f0;
      line-height: 1.7;
      font-weight: 400;
      padding: 24px;
      background: rgba(45, 55, 72, 0.9);
      border-radius: 12px;
      border-right: 4px solid #0070f3;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
      position: relative;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(0, 112, 243, 0.2);
    }

    .about-text p:hover {
      background: rgba(45, 55, 72, 0.95);
      transform: translateX(-6px) translateY(-2px);
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
      border-right-color: #38a169;
    }

    .about-image {
      text-align: center;
      position: relative;
    }

    .about-image::before {
      content: '';
      position: absolute;
      top: -20px;
      right: -20px;
      width: 110%;
      height: 110%;
      background: linear-gradient(135deg, rgba(0, 112, 243, 0.06), rgba(56, 161, 105, 0.06));
      border-radius: 20px;
      z-index: -1;
    }

    .about-image::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 150px;
      height: 150px;
      background: rgba(0, 112, 243, 0.04);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      z-index: -2;
    }

    .lottie-container {
      position: absolute;
      top: -40px;
      left: -40px;
      width: 120px;
      height: 120px;
      z-index: 1;
      opacity: 0.8;
    }

    .lottie-container svg {
      width: 100%;
      height: 100%;
      filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
    }

    .profile-image {
      width: 100%;
      max-width: 380px;
      height: 380px;
      border-radius: 16px;
      object-fit: cover;
      box-shadow: 0 12px 32px rgba(0,0,0,0.15);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: 4px solid white;
      position: relative;
      filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.1));
    }

    .profile-image:hover {
      transform: scale(1.03) translateY(-6px) rotate(1deg);
      box-shadow: 0 20px 40px rgba(0,0,0,0.2);
      filter: drop-shadow(0 12px 24px rgba(0, 0, 0, 0.15));
    }

    /* Additional animations */
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideInLeft {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes slideInRight {
      from {
        opacity: 0;
        transform: translateX(30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
    }

    @keyframes float {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    .stat-number {
      animation: pulse 2s ease-in-out infinite;
    }

    .testimonial-card:hover .author-avatar img {
      animation: pulse 1s ease-in-out;
    }

    .service-icon:hover {
      animation: float 2s ease-in-out infinite;
    }

    /* Services Grid */
    .services {
      background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
      position: relative;
    }

    .services::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 60px;
      background: #2d3748;
      clip-path: polygon(0 0, 100% 80%, 100% 100%, 0 100%);
    }

    .services-background {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(circle at 20% 40%, rgba(0, 112, 243, 0.02) 0%, transparent 50%),
        radial-gradient(circle at 80% 60%, rgba(56, 161, 105, 0.02) 0%, transparent 50%);
      z-index: 0;
    }

    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
      gap: 28px;
      margin-top: 80px;
    }

    .service-card {
      background: #2d3748;
      border-radius: 12px;
      padding: 28px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.2);
      transition: all 0.3s ease;
      border: 1px solid #4a5568;
      position: relative;
      overflow: hidden;
      height: fit-content;
    }

    .service-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: #0070f3;
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }

    .service-card:hover::before {
      transform: scaleX(1);
    }

    .service-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.1);
      border-color: #cbd5e0;
    }

    .service-icon {
      width: 48px;
      height: 48px;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #0070f3;
      border-radius: 8px;
      padding: 12px;
      box-shadow: 0 2px 8px rgba(0, 112, 243, 0.15);
      transition: all 0.3s ease;
    }

    .service-card:hover .service-icon {
      transform: scale(1.05);
      box-shadow: 0 4px 12px rgba(0, 112, 243, 0.2);
    }

    .service-icon svg {
      width: 26px;
      height: 26px;

      filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
    }

    .service-title {
      font-size: clamp(1.15rem, 4vw, 1.35rem);
      margin-bottom: 18px;
      color: #f7fafc;
      font-weight: 700;
      line-height: 1.3;
      position: relative;
    }

    .service-title::after {
      content: '';
      position: absolute;
      bottom: -6px;
      right: 0;
      width: 25px;
      height: 2px;
      background: #0070f3;
      border-radius: 1px;
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }

    .service-card:hover .service-title::after {
      transform: scaleX(1);
    }

    .service-description {
      color: #cbd5e0;
      margin-bottom: 22px;
      line-height: 1.7;
      font-size: clamp(0.9rem, 3vw, 0.95rem);
      font-weight: 400;
    }

    .service-features {
      list-style: none;
    }

    .service-features li {
      padding: 10px 0;
      position: relative;
      padding-right: 32px;
      color: #cbd5e0;
      font-size: clamp(0.9rem, 3vw, 0.95rem);
      line-height: 1.6;
      font-weight: 400;
      transition: all 0.3s ease;
    }

    .service-features li:hover {
      color: #f7fafc;
      transform: translateX(-3px);
    }

    .service-features li::before {
      content: '✓';
      position: absolute;
      right: 0;
      color: #38a169;
      font-weight: bold;
      background: #f0fff4;
      width: 20px;
      height: 20px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.75rem;
      box-shadow: 0 1px 4px rgba(56, 161, 105, 0.15);
      transition: all 0.3s ease;
    }

    .service-features li:hover::before {
      transform: scale(1.05);
      box-shadow: 0 2px 6px rgba(56, 161, 105, 0.2);
    }

    /* Service Card Buttons */
    .service-card-btn {
      margin-top: 24px;
      text-align: center;
    }

    .btn-card {
      display: inline-block;
      padding: 12px 24px;
      font-size: 0.95rem;
      font-weight: 600;
      text-decoration: none;
      border-radius: 8px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      z-index: 1;
      background: linear-gradient(135deg, #0070f3 0%, #38a169 100%);
      color: white;
      border: none;
      box-shadow: 0 2px 8px rgba(0, 112, 243, 0.2);
    }

    .btn-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(0, 112, 243, 0.3);
      background: linear-gradient(135deg, #0056b3 0%, #2f855a 100%);
      color: white;
    }

    .btn-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
      z-index: -1;
    }

    .btn-card:hover::before {
      left: 100%;
    }



    /* Gallery Section */
    .gallery {
      background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
      position: relative;
    }

    .gallery::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 60px;
      background: #2d3748;
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0 80%);
