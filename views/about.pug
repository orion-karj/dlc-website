        padding-right: 25px;
        font-size: 0.95rem;
      }

      .contact-section {
        padding: 40px 20px;
        margin-top: 40px;
      }

      .contact-grid {
        grid-template-columns: 1fr;
        gap: 24px;
      }

      .contact-item {
        padding: 24px 20px;
      }

      .contact-item svg {
        width: 40px;
        height: 40px;
      }

      .cta-title {
        font-size: 1.8rem;
      }

      .cta-description {
        font-size: 1rem;
        padding: 0 16px;
      }

      .btn {
        padding: 14px 28px;
        font-size: 1rem;
      }
