extends layout.pug 

block content
  style.
    /* Reset and Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
      font-size: 16px;
    }

    body {
      font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
      line-height: 1.6;
      color: #e2e8f0;
      direction: rtl;
      text-align: right;
      overflow-x: hidden;
      background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
      font-weight: 400;
      position: relative;
    }

    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        linear-gradient(90deg, transparent 98%, rgba(0, 112, 243, 0.05) 100%),
        linear-gradient(0deg, transparent 98%, rgba(0, 112, 243, 0.05) 100%);
      background-size: 40px 40px;
      pointer-events: none;
      z-index: -1;
    }

    /* Scroll fade effects */
    .fade-in {
      opacity: 0;
      transform: translateY(30px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .fade-in-left {
      opacity: 0;
      transform: translateX(50px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .fade-in-left.visible {
      opacity: 1;
      transform: translateX(0);
    }

    .fade-in-right {
      opacity: 0;
      transform: translateX(-50px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .fade-in-right.visible {
      opacity: 1;
      transform: translateX(0);
    }

    .scale-in {
      opacity: 0;
      transform: scale(0.8);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .scale-in.visible {
      opacity: 1;
      transform: scale(1);
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 24px;
      width: 100%;
    }

    /* Hero Section */
    .hero {
      min-height: 60vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      position: relative;
      background: linear-gradient(135deg, rgba(0, 112, 243, 0.1) 0%, rgba(59, 130, 246, 0.05) 100%);
      overflow: hidden;
      padding: 20px 0;
    }

    .hero-content {
      max-width: 800px;
      z-index: 2;
    }

    .hero-title {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 24px;
      text-shadow: 0 2px 8px rgba(0,0,0,0.3);
      animation: fadeInDown 1s ease-out;
      line-height: 1.2;
      letter-spacing: -0.02em;
      background: linear-gradient(45deg, #3b82f6, #1d4ed8, #3b82f6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero-subtitle {
      font-size: 1.5rem;
      color: #94a3b8;
      margin-bottom: 32px;
      animation: fadeInUp 1s ease-out 0.3s both;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Section Styles */
    .section {
      padding: 80px 0;
      position: relative;
    }

    .section-title {
      font-size: 2.5rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 60px;
      background: linear-gradient(45deg, #3b82f6, #1d4ed8);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .section-title svg {
      width: 52px;
      height: 52px;
      color: #1e40af;
      margin-left: 16px;
      vertical-align: middle;
    }

    /* Content Grid */
    .content-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: start;
      margin-bottom: 60px;
    }

    @media (max-width: 768px) {
      .content-grid {
        grid-template-columns: 1fr;
        gap: 40px;
        margin-bottom: 40px;
      }
    }

    .content-text {
      background: rgba(30, 64, 175, 0.05);
      border: 1px solid rgba(30, 64, 175, 0.1);
      border-radius: 20px;
      padding: 40px;
      backdrop-filter: blur(10px);
      position: relative;
      overflow: hidden;
    }

    .content-text h3 {
      font-size: 1.8rem;
      font-weight: 600;
      margin-bottom: 20px;
      color: #3b82f6;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .content-text h3 svg {
      width: 32px;
      height: 32px;
      color: #3b82f6;
    }

    .content-text p {
      font-size: 1.1rem;
      line-height: 1.7;
      color: #cbd5e1;
      margin-bottom: 20px;
    }

    .content-text ul {
      list-style: none;
      padding: 0;
    }

    .content-text li {
      padding: 12px 0;
      border-bottom: 1px solid rgba(30, 64, 175, 0.1);
      position: relative;
      padding-right: 30px;
      color: #e2e8f0;
    }

    .content-text li:last-child {
      border-bottom: none;
    }

    .content-text li::before {
      content: '✓';
      position: absolute;
      right: 0;
      top: 12px;
      color: #10b981;
      font-weight: bold;
      font-size: 1.2rem;
    }

    /* Full Width Section */
    .content-full-width {
      grid-column: 1 / -1;
      text-align: center;
      background: linear-gradient(135deg, rgba(30, 64, 175, 0.08), rgba(59, 130, 246, 0.08));
      border: 2px solid rgba(30, 64, 175, 0.2);
    }

    .content-full-width h3 {
      justify-content: center;
      margin-bottom: 30px;
    }

    /* Contact Section */
    .contact-section {
      background: linear-gradient(135deg, rgba(30, 64, 175, 0.1), rgba(59, 130, 246, 0.1));
      border-radius: 20px;
      padding: 60px;
      text-align: center;
      margin-top: 60px;
    }

    .contact-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 40px;
      margin-top: 40px;
    }

    @media (max-width: 768px) {
      .contact-grid {
        grid-template-columns: 1fr;
        gap: 24px;
        margin-top: 30px;
      }
    }

    .contact-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 16px;
      padding: 30px;
      background: rgba(30, 64, 175, 0.05);
      border-radius: 15px;
      border: 1px solid rgba(30, 64, 175, 0.1);
      transition: all 0.3s ease;
    }

    .contact-item:hover {
      transform: translateY(-5px);
      background: rgba(30, 64, 175, 0.1);
      border-color: rgba(30, 64, 175, 0.2);
    }

    .contact-item svg {
      width: 48px;
      height: 48px;
      color: #3b82f6;
    }

    .contact-item h4 {
      font-size: 1.2rem;
      font-weight: 600;
      color: #e2e8f0;
    }

    .contact-item p {
      color: #94a3b8;
      font-size: 1rem;
    }

    /* CTA Section */
    .cta-section {
      text-align: center;
      margin-top: 60px;
    }

    .cta-title {
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 20px;
      color: #e2e8f0;
    }

    .cta-description {
      font-size: 1.1rem;
      color: #94a3b8;
      margin-bottom: 30px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      background: linear-gradient(135deg, #3b82f6, #1d4ed8);
      color: white;
      padding: 16px 32px;
      border-radius: 12px;
      text-decoration: none;
      font-weight: 600;
      font-size: 1.1rem;
      transition: all 0.3s ease;
      border: none;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
      color: #000;
    }

    .btn svg {
      width: 24px;
      height: 24px;
    }

    /* Touch-friendly improvements */
    @media (hover: none) and (pointer: coarse) {
      .btn {
        min-height: 44px;
        min-width: 44px;
      }
      
      .contact-item {
        min-height: 44px;
      }
      
      .content-text h3 {
        min-height: 44px;
        display: flex;
        align-items: center;
      }
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .container {
        padding: 0 20px;
      }
      
      .content-grid {
        gap: 40px;
      }
      
      .hero-title {
        font-size: 3rem;
      }
    }

    @media (max-width: 768px) {
      .container {
        padding: 0 16px;
      }

      .hero {
        min-height: 50vh;
        padding: 40px 0;
      }

      .hero-title {
        font-size: 2.5rem;
        margin-bottom: 20px;
        line-height: 1.1;
      }

      .hero-subtitle {
        font-size: 1.2rem;
        margin-bottom: 24px;
        padding: 0 16px;
      }

      .section {
        padding: 60px 0;
      }

      .section-title {
        font-size: 2rem;
        margin-bottom: 40px;
      }

